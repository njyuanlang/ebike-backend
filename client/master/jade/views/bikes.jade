h3
  | 车辆列表
  from.pull-right.col-sm-3
    .input-group
      span.input-group-addon
        .icon-magnifier
      input.form-control(type='text', placeholder="输入电动车序列号", ng-model="filter.text", ui-keypress="{13:'tableParams.reload()'}")
  
.container-fluid
  
  .panel.panel-default
    .table-responsive
      table.table.table-bordered.table-striped(ng-table='tableParams')
        tbody
          tr(ng-repeat='entity in $data')
            td(data-title="'车辆编号'") {{entity.serialNumber}}
            td(data-title="'品牌'") {{entity.brand.name}}
            td(data-title="'型号'") {{entity.model}}
            td(data-title="'总里程'") {{entity.odo}}
            td(data-title="'车主'") {{entity.owner.username}}
            td(data-title="'注册地'") {{entity.owner.region.province}} {{entity.owner.region.city}}
            td(data-title="'注册日期'") {{entity.created}}