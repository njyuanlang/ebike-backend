.container-fluid
  // START chart
  .row
    .col-lg-12
      #panelChart2.panel.panel-default
        .panel-heading
          paneltool(tool-collapse, tool-dismiss)
          .panel-title 故障统计
        .panel-wrapper
          .panel-body
            flot(dataset='barStackedData', options='barStackedOptions', height="300px")
  // END chart
  
  // START table
  .panel.panel-default
    .table-responsive
      table.table.table-bordered.table-striped(ng-table='tableParams')
        tbody
          tr(ng-repeat='entity in $data')
            td(data-title="'时间'") {{entity._id}}
            td(data-title="'品牌'") {{entity.brandName}}
            td(data-title="'地区'") {{entity.regionName}}
            td(data-title="'转把'") {{entity.data[0]}}
            td(data-title="'电机'") {{entity.data[0]}}
            td(data-title="'刹车'") {{entity.data[0]}}
            td(data-title="'控制器'") {{entity.data[0]}}
  // END chart
            